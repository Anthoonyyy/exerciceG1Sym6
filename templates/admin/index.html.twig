{% extends 'template.front.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block content %}
    <h1>Admin Dashboard</h1>

    <h2>Tags</h2>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>
                    <a href="{{ path('admin_edit_tag', {id: tag.id}) }}">Modifier</a> |
                    <a href="{{ path('admin_delete_tag', {id: tag.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun tag trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2>Posts</h2>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>Contenu</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>
                    <a href="{{ path('admin_edit_post', {id: post.id}) }}">Modifier</a> |
                    <a href="{{ path('admin_delete_post', {id: post.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun post trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2>Sections</h2>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td>{{ section.id }}</td>
                <td>{{ section.name }}</td>
                <td>
                    <a href="{{ path('admin_edit_section', {id: section.id}) }}">Modifier</a> |
                    <a href="{{ path('admin_delete_section', {id: section.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune section trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}